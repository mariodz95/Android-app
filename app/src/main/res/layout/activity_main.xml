<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/TealBackground"
    tools:context=".MainActivity"
    android:id="@+id/activity_main">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="40dp"
        android:layout_weight="1">

        <Spinner
            android:id="@+id/spn1"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:dropDownWidth="@dimen/spinnerWidth"
            android:backgroundTint="@color/TealBackground"
            android:background="@android:drawable/btn_dropdown"/>

        <EditText
            android:id="@+id/inputCurrency"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginTop="12dp"
            android:hint="0"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/white"
            android:maxLength="10"
            android:textSize="25dp"
            android:textAlignment="center"
            android:focusedByDefault="false"
            android:layout_marginRight="20dp"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@+id/spn1"/>

        <View
            android:id="@+id/line"
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/white"
            android:layout_below="@id/spn1"
            android:layout_marginTop="20dp"/>

        <ImageButton
            android:id="@+id/swap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/swap"
            android:background="@color/TealBackground"
            android:layout_below="@+id/inputCurrency"
            android:layout_marginTop="20dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"/>

        <Spinner
            android:id="@+id/spn2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:dropDownWidth="@dimen/spinnerWidth"
            android:layout_marginTop="50dp"
            android:backgroundTint="@color/TealBackground"
            android:background="@android:drawable/btn_dropdown"
            android:layout_below="@+id/spn1"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="0"
            android:textColor="@color/white"
            android:textColorHint="@color/white"
            android:backgroundTint="@color/white"
            android:inputType="number"
            android:textAlignment="center"
            android:layout_alignParentRight="true"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/inputCurrency"
            android:textSize="25dp"
            android:layout_marginRight="20dp"
            android:layout_toRightOf="@+id/spn2"
            android:scrollHorizontally="true"
            android:singleLine="false"/>
    </RelativeLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="3">
        <Button
            android:id="@+id/btn1"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:layout_weight="1"
            android:layout_margin="@dimen/buttonMargin"/>
        <Button
            android:id="@+id/btn2"
            android:background="@drawable/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:layout_weight="1"
            android:layout_margin="@dimen/buttonMargin"/>
        <Button
            android:id="@+id/btn3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:text="3"
            android:layout_weight="1"
            android:layout_margin="@dimen/buttonMargin"/>
</LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:id="@+id/btn4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_margin="@dimen/buttonMargin"
            android:layout_weight="1"
            android:text="4"/>
        <Button
            android:id="@+id/btn5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_margin="@dimen/buttonMargin"
            android:text="5"/>
        <Button
            android:id="@+id/btn6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_margin="@dimen/buttonMargin"
            android:text="6"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
        <Button
            android:id="@+id/btn7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_margin="@dimen/buttonMargin"
            android:layout_weight="1"
            android:text="7"/>
        <Button
            android:id="@+id/btn8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_margin="@dimen/buttonMargin"
            android:text="8"/>
        <Button
            android:id="@+id/btn9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_margin="@dimen/buttonMargin"
            android:text="9"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="3">
    <ImageView
            android:id="@+id/imgx"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/button"
            android:layout_margin="@dimen/buttonMargin"
            android:src="@drawable/delete"/>
        <Button
            android:id="@+id/btn0"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button"
            android:layout_margin="@dimen/buttonMargin"
            android:layout_weight="1"
            android:text="0" />
        <Button
            android:id="@+id/btnDot"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="."
            android:background="@drawable/button"
            android:layout_margin="@dimen/buttonMargin"
            android:layout_weight="1" />
    </LinearLayout>
</LinearLayout>
    <android.support.design.widget.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        app:menu="@menu/navigation_menu"
        android:layout_gravity="start"
        android:id="@+id/nv">
    </android.support.design.widget.NavigationView>
</android.support.v4.widget.DrawerLayout>

